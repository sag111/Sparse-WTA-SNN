"""
Name: probabilistic_neuron_model
"""

neuron probabilistic_neuron:
    state:
        I_syn real = 0
    input:
        exc_spikes real <- excitatory spike
        inh_spikes real <- inhibitory spike
    output:
        spike   
    update:
        I_syn += exc_spikes
        I_syn -= inh_spikes
        if random_uniform(0, 1) < I_syn:
            emit_spike()
        I_syn = 0
